<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/channelData"
        android:background="#ffececec"
        android:elevation="8dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/videoThumb"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:background="@color/background_material_dark"
            android:src="@drawable/ic_placeholder"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/videoViews"
            android:layout_alignTop="@+id/videoThumb"
            android:layout_alignEnd="@+id/videoThumb"
            android:textSize="@dimen/abc_text_size_large_material"
            android:textColor="@color/primary_text_default_material_light"
            android:layout_marginTop="10dp"
            android:paddingRight="5dp"
            android:text="123456"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="11sp"
            android:layout_height="wrap_content"
            android:id="@+id/videoViewsIcon"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="2dp"
            android:layout_toLeftOf="@+id/videoViews"
            android:layout_alignBottom="@+id/videoViews"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_active_viewers"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/videoTitle"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/videoThumb"
            android:textSize="@dimen/abc_text_size_large_material"
            android:textColor="@color/primary_text_default_material_light"
            android:maxLines="3"
            android:text="asdfasdfasdf
            asdfasdf
            asdf"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewsAndRecorded"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:layout_alignLeft="@+id/videoTitle"
            android:layout_below="@+id/videoTitle"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:textColor="@color/primary_text_default_material_light"
            android:text="asdfasdfasdf
            asdfasdf
            asdf"/>

    </RelativeLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/videoGrid"/>


</LinearLayout>